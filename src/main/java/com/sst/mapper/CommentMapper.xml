<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sst.mapper.CommentMapper">

	<resultMap type="com.sst.entity.Comment" id="Comment">
		<id column="id" property="id"/>
		<result column="author"  property="author"/>
		<result column="email"  property="email"/>
		<result column="ip"  property="ip"/>
		<result column="create_date"  property="createDate"/>
		<result column="content"  property="content"/>
		<result column="status"  property="status"/>
		<result column="article_id"  property="articleId"/>
		<result column="parent_id"  property="parentId"/>
		<result column="Column_10"  property="column10"/>
	</resultMap>

	<insert id="create" keyProperty="id" useGeneratedKeys="true" parameterType="com.sst.entity.Comment">
		insert into tb_comment(
			author,
			email,
			ip,
			create_date,
			content,
			status,
			article_id,
			parent_id,
			Column_10
		)values(
			#{author},
			#{email},
			#{ip},
			#{createDate},
			#{content},
			#{status},
			#{articleId},
			#{parentId},
			#{column10}
		)
	</insert>

	<select id="query" resultMap="Comment">
		select * from tb_comment
		<include refid="CommentFindCriteria"/>

	</select>


	<select id="count" resultType="int">
		select count(1) from tb_comment
		<include refid="CommentFindCriteria"/>
	</select>

	<select id="detail" resultMap="Comment">
		select * from tb_comment where id = #{id}
	</select>

	<delete id="delete">
		delete from tb_comment where id = #{id}
	</delete>
	<update id="update">
		update tb_comment set
			author=#{author},
			email=#{email},
			ip=#{ip},
			create_date=#{createDate},
			content=#{content},
			status=#{status},
			article_id=#{articleId},
			parent_id=#{parentId},
			Column_10=#{column10}
		where id = #{id}
	</update>

	<update id="updateSelective">

		<trim prefix="set" suffixOverrides=",">
			<if test="author != null and author != ''"> author = #{author},</if>
			<if test="email != null and email != ''"> email = #{email},</if>
			<if test="ip != null and ip != ''"> ip = #{ip},</if>
			<if test="createDate != null and createDate != ''"> create_date = #{createDate},</if>
			<if test="content != null and content != ''"> content = #{content},</if>
			<if test="status != null">status = #{status},</if>
			<if test="articleId != null">article_id = #{articleId},</if>
			<if test="parentId != null">parent_id = #{parentId},</if>
			<if test="column10 != null and column10 != ''"> Column_10 = #{column10},</if>
		</trim>
		where id = #{id}
	</update>

	<sql id="CommentFindCriteria">
		<where>
			<if test="id != null">and id = #{id}</if>
			<if test="author != null and author != ''">and author = #{author}</if>
			<if test="email != null and email != ''">and email = #{email}</if>
			<if test="ip != null and ip != ''">and ip = #{ip}</if>
			<if test="content != null and content != ''">and content = #{content}</if>
			<if test="status != null">and status = #{status}</if>
			<if test="articleId != null">and article_id = #{articleId}</if>
			<if test="parentId != null">and parent_id = #{parentId}</if>
			<if test="column10 != null and column10 != ''">and Column_10 = #{column10}</if>
		</where>
	</sql>

</mapper>